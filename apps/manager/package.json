{
  "name": "@activityrank/manager",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node ./dist/app.js",
    "dev": "node --enable-source-maps ./dist/app.js",
    "dev:watch": "nodemon --exec \"pnpm run build && pnpm run dev\"",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "typecheck": "tsc --noEmit",
    "build": "swc src --out-dir dist --copy-files --strip-leading-paths"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.2",
    "@hono/zod-validator": "^0.2.2",
    "@sapphire/snowflake": "^3.2.2",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.22",
    "croner": "^8.0.1",
    "exponential-backoff": "^3.1.1",
    "hono": "^4.5.10",
    "mysql2": "^3.11.5",
    "ofetch": "^1.3.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@activityrank/tsconfig": "workspace:*",
    "nodemon": "^3.1.4",
    "typescript": "^5.4.4"
  },
  "prettier": {
    "singleQuote": true
  },
  "nodemonConfig": {
    "ext": "js,ts",
    "watch": [
      "src/**/*.ts"
    ]
  }
}
